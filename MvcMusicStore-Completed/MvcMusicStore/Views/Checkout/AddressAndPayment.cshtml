@model MvcMusicStore.Models.Order

@{
    ViewBag.Title = "Address And Payment";
}
<script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script>
    function Validation() {
        var validate = true;
        if ($('#FirstName').val() == "") {
            $("#ErrMsgFName").show();
            validate = false;
        }
        else {
            $("#ErrMsgFName").hide();
        }

        if ($('#LastName').val() == "") {
            $("#ErrMsgLName").show();
            validate = false;
        }
        else {
            $("#ErrMsgLName").hide();
        }

        if ($('#Address').val() == "") {
            $("#ErrMsgAddress").show();
            validate = false;
        }
        else {
            $("#ErrMsgAddress").hide();
        }

        if ($('#City').val() == "") {
            $("#ErrMsgCity").show();
            validate = false;
        }
        else {
            $("#ErrMsgCity").hide();
        }

        if ($('#State').val() == "") {
            $("#ErrMsgState").show();
            validate = false;
        }
        else {
            $("#ErrMsgState").hide();
        }

        if ($('#PostalCode').val() == "") {
            $("#ErrMsgPostalCode").show();
            validate = false;
        }
        else {
            $("#ErrMsgPostalCode").hide();
        }

        if ($('#Country').val() == "") {
            $("#ErrMsgCountry").show();
            validate = false;
        }
        else {
            $("#ErrMsgCountry").hide();
        }

        if ($('#Phone').val() == "") {
            $("#ErrMsgPhone").show();
            validate = false;
        }
        else {
            $("#ErrMsgPhone").hide();
        }

        if ($('#Email').val() == "") {
            $("#ErrMsgEmail").show();
            validate = false;
        }
        else {
            $("#ErrMsgEmail").hide();
        }
        return validate;
    }
</script>
@using (Html.BeginForm())
{

    <h2>Address And Payment</h2>
    <fieldset>
        <legend>Shipping Information</legend>



        <div class="editor-label">
            @Html.LabelFor(m => m.FirstName)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(m => m.FirstName)
            <span id="ErrMsgFName" class="field-validation-error" style="display:none">First Name is required</span>
        </div>

        <div class="editor-label">
            @Html.LabelFor(m => m.LastName)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(m => m.LastName)
            <span id="ErrMsgLName" class="field-validation-error" style="display:none">Last Name is required</span>
        </div>

        <div class="editor-label">
            @Html.LabelFor(m => m.Address)
        </div>
        <div class="editor-field">
            @Html.PasswordFor(m => m.Address)
            <span id="ErrMsgAddress" class="field-validation-error" style="display:none">Address is required</span>
        </div>

        <div class="editor-label">
            @Html.LabelFor(m => m.City)
        </div>
        <div class="editor-field">
            @Html.PasswordFor(m => m.City)
            <span id="ErrMsgCity" class="field-validation-error" style="display:none">City is required</span>
        </div>


        <div class="editor-label">
            @Html.LabelFor(m => m.State)
        </div>
        <div class="editor-field">
            @Html.PasswordFor(m => m.State)
            <span id="ErrMsgState" class="field-validation-error" style="display:none">State is required</span>
        </div>

        <div class="editor-label">
            @Html.LabelFor(m => m.PostalCode)
        </div>
        <div class="editor-field">
            @Html.PasswordFor(m => m.PostalCode)
            <span id="ErrMsgPostalCode" class="field-validation-error" style="display:none">Postal Code is required</span>
        </div>

        <div class="editor-label">
            @Html.LabelFor(m => m.Country)
        </div>
        <div class="editor-field">
            @Html.PasswordFor(m => m.Country)
            <span id="ErrMsgCountry" class="field-validation-error" style="display:none">Country is required</span>
        </div>

        <div class="editor-label">
            @Html.LabelFor(m => m.Phone)
        </div>
        <div class="editor-field">
            @Html.PasswordFor(m => m.Phone)
            <span id="ErrMsgPhone" class="field-validation-error" style="display:none">Phone is required</span>
        </div>

        <div class="editor-label">
            @Html.LabelFor(m => m.Email)
        </div>
        <div class="editor-field">
            @Html.PasswordFor(m => m.Email)
            <span id="ErrMsgEmail" class="field-validation-error" style="display:none">Email is required</span>
        </div>
        <div class="editor-label">
            @Html.Label("CreditCardNumber")
        </div>
        <div class="editor-field">
            @Html.PasswordFor(m => m.CreditCardNumber)
            <span id="ErrMsgEmail" class="field-validation-error" style="display:none">CreditCard is required</span>
        </div>

    </fieldset>
    <fieldset>
        <legend>Payment</legend>
        <p>We're running a promotion: all music is free with the promo code: "FREE"</p>

        <div class="editor-label">
            @Html.Label("Promo Code")
        </div>
        <div class="editor-field">
            @Html.TextBox("PromoCode")
        </div>
    </fieldset>

    <input type="submit" value="Submit Order" onclick="return Validation()" />
}