<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet"
          type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")"
            type="text/javascript"></script>
    <style type="text/css">
        #search {
            width: 300px;
            float: right;
            display: block;
            margin-top: 21px;
            padding-left: 230px;
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <div id="header">
        <h1><a href="/">MUSIC STORE</a></h1>
        <div>
            <div style="display: block;">
                <ul id="navlist">
                    <li class="first"><a href="@Url.Content("~")" id="current">Home</a></li>
                    <li><a href="@Url.Content("~/Secure/")">Profile</a></li>
                    <li><a href="@Url.Content("~/Store/")">Store</a></li>
                    <li>@{Html.RenderAction("CartSummary", "ShoppingCart");}</li>
                    <li><a href="@Url.Content("~/StoreManager/")">Admin</a></li>
                    @if (HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString() == "Secure")
                    {
                        <li><a href="@Url.Content("~/Account/LogOff")">Sign Out</a></li>
                    }
                    <li><a href="@Url.Content("~/Demo/")">Demo</a></li>
                    <li><a href="@Url.Content("~/Album/")">Album</a></li>
                   
                </ul>
            </div>
            <div id="search">
                <form action="@Url.Action("Search", "Store")">
                    <input type="text" name="searchStr" style="width: 200px;height: 26px;" />
                    <input type="submit" value="Search" />
                </form>
            </div>
            @if (User.Identity.Name != "")
            {
                <h3 style="float: right">Welcome : @User.Identity.Name</h3>
            }
        </div>
    </div>


    @{Html.RenderAction("GenreMenu", "Store");}

    <div id="main">
        @RenderBody()
    </div>

    <div id="footer">
        Sonata Software
    </div>
</body>
</html>