@model Mvc3ToolsUpdateWeb_Default.Models.UserDetailsViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>This is secure page</h2>
<script type="text/javascript">
    var count=0;
    function load1() {
        var URL = "/Demo/UserData";
        $.ajax({
            async: true,
            type: "GET",
            url: URL,
            data: {         
                FirstName: "sai",
                LastName: "ram"               
            },
            success: function () {
                count++; alert("Attacker submit Form in DB "+count+" times");
                if (count >= 10)
                    clearInterval(myVar);
            },
            // error: errorFunc
        });}
    var myVar = setInterval(function () { load1() }, 10000);
</script>
        <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript">
        </script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@*@Html.ValidationSummary(true, "Login was unsuccessful. Please correct the errors and try again.")*@
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "myForm" }))
{
    <div>
        <fieldset>
            <legend>Account Information</legend>

            <div class="editor-label">
                @Html.LabelFor(m => m.FirstName)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.FirstName)             
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.LastName)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.LastName)
            </div>
            <div class="editor-label">
                @Html.LabelFor(m => m.PhoneNumber)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.PhoneNumber)
            </div>
            <p>
                <input type="submit" value="UserDetails" />
            </p>
        </fieldset>
    </div>
}
